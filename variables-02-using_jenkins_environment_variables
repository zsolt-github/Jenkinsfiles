pipeline {
	agent any

	stages {
		stage("List env vars") {
			steps {
				sh "printenv | sort"
			}
		}

		stage("Using env vars") {
			steps {
				echo "BUILD_NUMBER = ${env.BUILD_NUMBER}"
				sh 'echo BUILD_NUMBER = $BUILD_NUMBER'	// shell variable 											   access
			}
		}

		stage("Extra step to trigger webhook") {
			steps {
				echo "Triggering webhook"
			}
		}
	}
}